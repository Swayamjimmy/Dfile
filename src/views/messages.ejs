        <%= error_msg %>
    </div>
<% } %>

<% if (error && error.length > 0) { %>
    <div style="padding: 10px; margin-bottom: 10px; color: green; background-color: #f8d7da;">
        <%= success_msg %>
    </div>
<% } %>