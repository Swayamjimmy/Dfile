<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= folder.name %></title>
    <style>
        .folder, .file {display: inline-block; padding: 10px; border: 1px solid #ccc; margin: 5px;}
        .folder a, .file a {text-decoration: none; color: black;}
    </style>
</head>
<body>
    <p>
        <a href="/dashboard">Dashboard</a> / <%= folder.name %>
        (<a href="/logout">Logout</a>)
    </p>
    <h1>Contents of: <%= folder.name %></h1>

    <%- include('_messages') %>

    <hr>
    <h3>Create New Sub-folder</h3>
    <form action="/folders" method="POST">
        <input type="hidden" name="parentId" value="<%= folder.id %>">
        <input type="text" name="folderName" placeholder="Sub-folder Name" required>
        <button type="submit">Create</button>
    </form>
    <hr>

    <h2>Sub-folders</h2>
    <div>
        <% if(folder.children.length === 0) { %>
            <p>No sub-folders here</p>
        <% } else { %>
            <% folder.children.forEach(subfolder => { %>
                <div class="folder">
                    <a href="/folders/<%= subfolder.id %>">üìÅ <%= subfolder.name %></a>
                </div>
            <% }) %>
        <% } %>
    </div>

    <hr>
    <h3>Upload New File to this Folder</h3>
    <form action="/files" method="post" enctype="multipart/form-data">
        <input type="hidden" name="folderId" value="<%= folder.id %>">
        <div>
            <input type="file" name="fileToUpload" required>
        </div>
        <button type="submit">Upload File</button>
    </form>
    <hr>

   <h2>Files</h2>
<div>
    <% if (folder.files.length === 0) { %>
        <p>No files here.</p>
    <% } else { %>
        <% folder.files.forEach(file => { %>
            <div class="file">
                <a href="/files/<%= file.id %>/download" title="Download file">
                    üìÑ <%= file.name %> (<%= (file.size / 1024).toFixed(2) %> KB)
                </a>
            </div>
        <% }) %>
    <% } %>
</div>

<hr>
<h3>Share this Folder</h3>
<form action="/folders/<%= folder.id %>/share" method="POST">
    <label for="duration">Share for:</label>
    <select name="duration" id="duration">
        <option value="1d">1 Day</option>
        <option value="7d">7 Days</option>
        <option value="30d">30 Days</option>
    </select>
    <button type="submit">Generate Share Link</button>
</form>
    
</form>

    <% if (folder.sharedLinks && folder.sharedLinks.length > 0) { %>
        <h4>Active Share Links:</h4>
        <ul id="share-links-list">
            <% folder.sharedLinks.forEach(link => { %>
                <% if (new Date(link.expiresAt) > new Date()) { %>
                    <li>
                        <% const fullUrl = `${baseUrl}/share/${link.token}` %>
                        
                        <a href="/share/<%= link.token %>" target="_blank"><%= fullUrl %></a>
                        (Expires: <%= new Date(link.expiresAt).toLocaleString() %>)
                        
                        <button onclick="copyToClipboard('<%= fullUrl %>')">Copy</button>
                    </li>
                <% } %>
            <% }) %>
        </ul>
    <% } %>
    <hr>

    <script>
    function copyToClipboard(text) {
        navigator.clipboard.writeText(text).then(() => {
            alert('Link copied to clipboard!');
        }, (err) => {
            alert('Failed to copy link.');
            console.error('Could not copy text: ', err);
        });
    }
</script>
</body>
</html>