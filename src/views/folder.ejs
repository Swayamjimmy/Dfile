<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= folder.name %></title>
    <style>
        .folder, .file {display: inline-block; padding: 10px; border: 1px solid #ccc; margin: 5px;}
        .folder a, .file a {text-decoration: none; color: black;}
    </style>
</head>
<body>
    <p>
        <a href="/dashboard">Dashboard</a> / <%= folder.name %>
        (<a href="/logout">Logout</a>)
    </p>
    <h1>Contents of: <%= folder.name %></h1>

    <%- include('_messages') %>

    <hr>
    <h3>Create New Sub-folder</h3>
    <form action="/folders" method="POST">
        <input type="hidden" name="parentId" value="<%= folder.id %>">
        <input type="text" name="folderName" placeholder="Sub-folder Name" required>
        <button type="submit">Create</button>
    </form>
    <hr>

    <h2>Sub-folders</h2>
    <div>
        <% if(folder.children.length === 0) { %>
            <p>No sub-folders here</p>
        <% } else { %>
            <% folder.children.forEach(subfolder => { %>
                <div class="folder">
                    <a href="/folders/<%= subfolder.id %>">ğŸ“ <%= subfolder.name %></a>
                </div>
            <% }) %>
        <% } %>
    </div>

    <hr>
    <h3>Upload New File to this Folder</h3>
    <form action="/files" method="post" enctype="multipart/form-data">
        <input type="hidden" name="folderId" value="<%= folder.id %>">
        <div>
            <input type="file" name="fileToUpload" required>
        </div>
        <button type="submit">Upload File</button>
    </form>
    <hr>

   <h2>Files</h2>
<div>
    <% if (folder.files.length === 0) { %>
        <p>No files here.</p>
    <% } else { %>
        <% folder.files.forEach(file => { %>
            <div class="file">
                <a href="/files/<%= file.id %>/download" title="Download file">
                    ğŸ“„ <%= file.name %> (<%= (file.size / 1024).toFixed(2) %> KB)
                </a>
            </div>
        <% }) %>
    <% } %>
</div>
    
</body>
</html>